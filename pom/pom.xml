<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.universAAL</groupId>
    <artifactId>uAAL.pom</artifactId>
    <version>1.1.0</version>
  </parent>
  <groupId>org.universAAL.middleware</groupId>
  <artifactId>mw.pom</artifactId>
  <version>1.1.0</version>
  <packaging>pom</packaging>
  <name>universAAL Middleware Suite</name>
  <description>The set of artefacts realizing the universAAL middleware based on the PERSONA codebase.</description>
  <developers>
    <developer>
      <id>saied</id>
      <name>Saied Tazari</name>
      <email>saied.tazari@igd.fraunhofer.de</email>
      <roles>
        <role>architect</role>
        <role>developer</role>
      </roles>
      <timezone>CEST/CET</timezone>
    </developer>
    <developer>
      <id>ffurfari</id>
      <name>Francesco Furfari</name>
      <email>francesco.furfari@isti.cnr.it</email>
      <roles>
        <role>builder</role>
        <role>developer</role>
      </roles>
      <timezone>CEST/CET</timezone>
    </developer>
  </developers>
  <modules>
    <module>../container.xfaces</module>
    <module>../container.osgi</module>
    <module>../acl.interfaces</module>
    <module>../acl.bridge</module>
    <module>../acl.rosgi</module>
    <module>../acl.upnp</module>
    <module>../data.representation</module>
    <module>../data.serialization</module>
    <module>../bus.model</module>
    <module>../bus.service</module>
    <module>../bus.context</module>
    <module>../bus.ui</module>
    <module>composite</module>
  </modules>
  <scm>
    <connection>${svn.base}/pom</connection>
    <developerConnection>${svn.base}/pom</developerConnection>
    <url>${svn.base.url}pom</url>
  </scm>
  <properties>
    <remoteOBR></remoteOBR>
    <gforge.project.name>middleware</gforge.project.name>
    <maven.compile.source>1.3</maven.compile.source>
    <maven.compile.target>1.3</maven.compile.target>
  </properties>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>4.10</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.felix</groupId>
        <artifactId>org.osgi.core</artifactId>
        <version>1.0.1</version>
        <scope>provided</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.felix</groupId>
        <artifactId>org.osgi.compendium</artifactId>
        <version>1.4.0</version>
        <scope>provided</scope>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.acl.bridge</artifactId>
        <version>1.1.0</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.acl.interfaces</artifactId>
        <version>1.1.0</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.acl.rosgi</artifactId>
        <version>1.1.0</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.acl.upnp</artifactId>
        <version>1.1.0</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.bus.context</artifactId>
        <version>1.1.0</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.bus.io</artifactId>
        <version>1.0.1-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.bus.ui</artifactId>
        <version>1.1.0</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.bus.model</artifactId>
        <version>1.1.0</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.bus.service</artifactId>
        <version>1.1.0</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.container.osgi</artifactId>
        <version>1.1.0</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.container.xfaces</artifactId>
        <version>1.1.0</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.data.representation</artifactId>
        <version>1.1.0</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.data.serialization</artifactId>
        <version>1.1.0</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.support</groupId>
        <artifactId>itests</artifactId>
        <version>1.1.0</version>
        <scope>test</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <repositories>
    <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>uaal</id>
      <name>universAAL Repositories</name>
      <url>http://depot.universaal.org/maven-repo/releases/</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>uaal-snapshots</id>
      <name>universAAL Snapshot Repositories</name>
      <url>http://depot.universaal.org/maven-repo/snapshots/</url>
    </pluginRepository>
    <pluginRepository>
      <id>uaal</id>
      <name>universAAL Repositories</name>
      <url>http://depot.universaal.org/maven-repo/releases/</url>
    </pluginRepository>
  </pluginRepositories>
  <build>
    <plugins>
      <plugin>
        <groupId>org.universAAL.support</groupId>
        <artifactId>uaal-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <configuration>
          <skipAttach>false</skipAttach>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
