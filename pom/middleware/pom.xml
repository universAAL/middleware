<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.universAAL.middleware</groupId>
		<artifactId>mw.pom</artifactId>
		<version>1.0.2-SNAPSHOT</version>
		<relativePath>../</relativePath>
	</parent>
	<packaging>pom</packaging>
	<artifactId>middleware</artifactId>  
	<version>1.0.2-SNAPSHOT</version>
	<name>universAAL Middleware Suite Composite</name>
	<description>The set of artefacts realizing the universAAL middleware based on the PERSONA codebase.</description>
	<url />

	<scm>
		<connection>${svn.base}/pom/middleware</connection> 
		<developerConnection>${svn.base}/pom/middleware</developerConnection>
		<url>${svn.base.url}pom/middleware</url>
	</scm>
	
	<dependencies>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.bus.service</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.bus.context</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.bus.ui</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.data.serialization</artifactId>
		</dependency>
	</dependencies>
	
	<properties>
		<project.build.sourceEncoding>cp1252</project.build.sourceEncoding>
	</properties>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.universAAL.support</groupId>
				<artifactId>uaal-maven-plugin</artifactId>
				<version>1.0.1-SNAPSHOT</version>
				<executions>
					<execution>
						<id>CompositeMojo</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>composite</goal>
						</goals>
					</execution>
					<execution>
						<id>TestMojo</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>test</goal>
						</goals>
					</execution>					
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
