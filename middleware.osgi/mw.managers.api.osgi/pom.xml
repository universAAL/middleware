<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.universAAL.middleware</groupId>
    <artifactId>mw.pom.osgi</artifactId>
    <version>3.1.1-SNAPSHOT</version>
    <relativePath>../mw.pom.osgi</relativePath>
  </parent>
  <groupId>org.universAAL.middleware</groupId>
  <artifactId>mw.managers.api.osgi</artifactId>
  <version>3.1.1-SNAPSHOT</version>
  <packaging>bundle</packaging>
  <name>universAAL Middleware Manager API (OSGi)</name>
  <dependencies>
    <dependency>
      <groupId>org.universAAL.middleware</groupId>
      <artifactId>mw.managers.api.core</artifactId>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-Author>Michele Girolami &lt;michele.girolami@isti.cnr.it>, Filippo Palumbo &lt;filippo.palumbo@isti.cnr.it>, Francesco Furfari &lt;francesco.furfari@isti.cnr.it></Bundle-Author>
            <Bundle-Name>${project.name}</Bundle-Name>
            <Bundle-Description>${project.description}</Bundle-Description>
            <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
            <Export-Package>org.universAAL.middleware.managers.api</Export-Package>
            <Import-Package>org.universAAL.middleware.interfaces,
            		 org.universAAL.middleware.brokers.message.configuration,
                     org.universAAL.middleware.deploymanager.uapp.model,
                     org.universAAL.middleware.interfaces.aalspace,
					 org.universAAL.middleware.interfaces.configuration,
					 org.universAAL.middleware.interfaces.configuration.configurationDefinitionTypes,
					 org.universAAL.middleware.interfaces.configuration.configurationEditionTypes,
					 org.universAAL.middleware.interfaces.configuration.configurationEditionTypes.pattern,
                     org.universAAL.middleware.interfaces.mpa</Import-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
