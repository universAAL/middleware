<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.universAAL.middleware</groupId>
		<artifactId>mw.pom.osgi</artifactId>
		<version>3.1.1-SNAPSHOT</version>
		<relativePath>../mw.pom.osgi</relativePath>
	</parent>
	<groupId>org.universAAL.middleware</groupId>
	<artifactId>mw.connectors.discovery.fake.osgi</artifactId>
	<version>3.1.1-SNAPSHOT</version>
	<packaging>bundle</packaging>
	<description>Fake Discovery Connector</description>
	<name>universAAL Middleware Connector Discovery Fake (OSGi)</name>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.universAAL.support</groupId>
			<artifactId>itests</artifactId>
		</dependency>
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.compendium</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.container.osgi</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.connectors.api.osgi</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.connectors.discovery.fake.core</artifactId>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-Author>Michele Girolami &lt;michele.girolami@isti.cnr.it></Bundle-Author>
						<Bundle-Name>${project.name}</Bundle-Name>
						<Bundle-Description>${project.description}</Bundle-Description>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Provider>ISTI-CNR</Bundle-Provider>
						<Import-Package>org.osgi.framework;version="[1,2)",*</Import-Package>
						<Export-Package>org.universAAL.middleware.connectors.discovery.fake.*</Export-Package>
						<Bundle-Activator>org.universAAL.middleware.connectors.discovery.fake.osgi.Activator</Bundle-Activator>
						<Private-Package />
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
