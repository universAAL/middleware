<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.universAAL.middleware</groupId>
    <artifactId>mw.pom.osgi</artifactId>
    <version>3.1.0</version>
    <relativePath>../mw.pom.osgi</relativePath>
  </parent>
  <groupId>org.universAAL.middleware</groupId>
  <artifactId>mw.managers.aalspace.osgi</artifactId>
  <version>3.1.0</version>
  <packaging>bundle</packaging>
  <name>universAAL Middleware Manager AALSpace (OSGi)</name>
  <dependencies>
    <dependency>
      <groupId>org.universAAL.support</groupId>
      <artifactId>itests</artifactId>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.core</artifactId>
    </dependency>
    <dependency>
      <groupId>org.universAAL.middleware</groupId>
      <artifactId>mw.container.osgi</artifactId>
    </dependency>
    <dependency>
      <groupId>org.universAAL.middleware</groupId>
      <artifactId>mw.managers.api.osgi</artifactId>
    </dependency>
    <dependency>
      <groupId>org.universAAL.middleware</groupId>
      <artifactId>mw.managers.aalspace.core</artifactId>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-Author>Michele Girolami &lt;michele.girolami@isti.cnr.it>,
                     Francesco Furfari &lt;francesco.furfari@isti.cnr.it>,
                     Stefano Lenzi &lt;stefano.lenzi@isti.cnr.it></Bundle-Author>
            <Bundle-Name>${project.name}</Bundle-Name>
            <Bundle-Description>${project.description}</Bundle-Description>
            <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
            <Export-Package>org.universAAL.middleware.managers.aalspace,
                     org.universAAL.middleware.managers.aalspace.osgi,
                     org.universAAL.middleware.managers.aalspace.util</Export-Package>
            <Import-Package>org.universAAL.middleware.managers.aalspace,
            		 org.osgi.framework;version="[1,2)",
                     org.osgi.service.cm,
                     org.osgi.service.log,
                     org.universAAL.middleware.container,
                     org.universAAL.middleware.container.osgi,
                     org.universAAL.middleware.managers.api,
                     org.universAAL.middleware.brokers,
                     org.universAAL.middleware.container.utils,
                     org.universAAL.middleware.container.osgi.util,
                     javax.xml.bind,
                     javax.xml.validation,
                     org.universAAL.middleware.connectors.util,
                     org.universAAL.middleware.interfaces,
                     org.universAAL.middleware.interfaces.aalspace.*, 
                     org.w3c.dom,
                     org.xml.sax,
                     org.universAAL.middleware.brokers.control</Import-Package>
            <Bundle-Activator>org.universAAL.middleware.managers.aalspace.osgi.Activator</Bundle-Activator>
            <Private-Package />
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>uAAL-Test-Runtime</id>
      <dependencies>
        <dependency>
          <groupId>org.universAAL.middleware</groupId>
          <artifactId>mw.interfaces.osgi</artifactId>
          <scope>compile</scope>
        </dependency>
      </dependencies>
    </profile>
  </profiles>
</project>
