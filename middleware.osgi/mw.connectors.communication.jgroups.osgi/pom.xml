<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>mw.pom.osgi</artifactId>
		<groupId>org.universAAL.middleware</groupId>
		<version>1.3.2-SNAPSHOT</version>
		<relativePath>../mw.pom.osgi</relativePath>
	</parent>
	<groupId>org.universAAL.middleware</groupId>
	<artifactId>mw.connectors.communication.jgroups.osgi</artifactId>
	<packaging>bundle</packaging>
	<version>1.3.2-SNAPSHOT</version>
	<name>universAAL Middleware Connector Communication JGroups (OSGi)</name>

	<dependencies>
		<dependency>
		  <groupId>org.universAAL.support</groupId>
		  <artifactId>itests</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.container.osgi</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.connectors.communication.jgroups.core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.interfaces.osgi</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.osgi.core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.osgi.compendium</artifactId>
		</dependency>
	</dependencies>
	<!-- Note that since we are using .osgi bundle that wraps .core ones, in 
		the import section we must add all the runtime and compile time imports of 
		the .core bundle -->
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-Author><![CDATA[Michele Girolami <michele.girolami@isti.cnr.it>, Francesco Furfari <francesco.furfari@isti.cnr.it>]]></Bundle-Author>
						<Bundle-Name>${project.name}</Bundle-Name>
						<Bundle-Description>${project.description}</Bundle-Description>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Export-Package>org.universAAL.middleware.connectors.communication.jgroups, org.universAAL.middleware.connectors.communication.jgroups.osgi, org.universAAL.middleware.connectors.communication.jgroups.util</Export-Package>
						<Import-Package>org.universAAL.middleware.interfaces.*,
							org.jgroups,
							org.jgroups.blocks,
							org.jgroups.conf,
							org.jgroups.util,
							org.osgi.framework,
							org.osgi.service.cm,
							org.universAAL.middleware.connectors,
							org.universAAL.middleware.connectors.exception,
							org.universAAL.middleware.connectors.util,
							org.universAAL.middleware.container,
							org.universAAL.middleware.container.osgi,
							org.universAAL.middleware.container.utils,
							org.universAAL.middleware.interfaces,
							org.universAAL.middleware.modules,javax.xml.bind,
							javax.xml.bind.annotation,
							javax.xml.bind.annotation.adapters,
							javax.xml.namespace,
							org.w3c.dom,
							org.universAAL.middleware.connectors.communication.jgroups.util,
							org.universAAL.middleware.connectors.communication.jgroups.osgi
						</Import-Package>
						<Bundle-Activator>org.universAAL.middleware.connectors.communication.jgroups.osgi.Activator</Bundle-Activator>
						<Private-Package />
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>