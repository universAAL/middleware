<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>mw.pom.osgi</artifactId>
		<groupId>org.universAAL.middleware</groupId>
		<version>1.3.2-SNAPSHOT</version>
		<relativePath>../mw.pom.osgi</relativePath>
	</parent>
	
	<groupId>org.universAAL.middleware</groupId>
	<artifactId>mw.connectors.discovery.slp.osgi</artifactId>
	<packaging>bundle</packaging>
	<version>1.3.2-SNAPSHOT</version>
	<name>universAAL Middleware Connector Discovery SLP (OSGi)</name>
	<description>SLP Discovery Connector </description>

	<dependencies>
		<dependency>
		  <groupId>org.universAAL.support</groupId>
		  <artifactId>itests</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.osgi.core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.osgi.compendium</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.container.osgi</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.connectors.api.osgi</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.connectors.discovery.slp.core</artifactId>
		</dependency>
	</dependencies>
	<profiles>
  <profile>
    <id>uAAL-Test-Runtime</id>
    <dependencies>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.container.osgi</artifactId>
      		<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.connectors.api.core</artifactId>
      		<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.connectors.discovery.slp.core</artifactId>
      		<scope>compile</scope>
		</dependency>
    </dependencies>
  </profile>
</profiles>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-Author><![CDATA[Michele Girolami <michele.girolami@isti.cnr.it>, Francesco Furfari <francesco.furfari@isti.cnr.it>]]></Bundle-Author>
						<Bundle-Name>${project.name}</Bundle-Name>
						<Bundle-Description>${project.description}</Bundle-Description>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Provider>ISTI-CNR</Bundle-Provider>
						<Import-Package>
							ch.ethz.iks.slp, org.osgi.framework,
							org.osgi.service.cm, org.universAAL.middleware.connectors,
							org.universAAL.middleware.connectors.discovery.slp.util,
							org.universAAL.middleware.connectors.exception,
							org.universAAL.middleware.connectors.util,
							org.universAAL.middleware.container,
							org.universAAL.middleware.container.osgi,
							org.universAAL.middleware.container.utils,
							org.universAAL.middleware.interfaces.aalspace
							</Import-Package>
						<Export-Package>
							org.universAAL.middleware.connectors.discovery.slp.*
						</Export-Package>
						<Bundle-Activator>org.universAAL.middleware.connectors.discovery.slp.osgi.Activator</Bundle-Activator>
						<Private-Package />
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
