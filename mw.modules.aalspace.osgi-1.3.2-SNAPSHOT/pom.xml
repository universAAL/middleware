<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>mw.pom.osgi</artifactId>
		<groupId>org.universAAL.middleware</groupId>
		<version>1.3.2-SNAPSHOT</version>
		<relativePath>../mw.pom.osgi</relativePath>
	</parent>

	<groupId>org.universAAL.middleware</groupId>
	<artifactId>mw.modules.aalspace.osgi</artifactId>
	<version>1.3.2-SNAPSHOT</version>
	<packaging>bundle</packaging>
	<name>universAAL Middleware Module AALSpace (OSGi)</name>

	<dependencies>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.osgi.compendium</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.container.osgi</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.connectors.api.osgi</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.modules.api.osgi</artifactId>
		</dependency>
		<dependency>
			<groupId>org.universAAL.middleware</groupId>
			<artifactId>mw.modules.aalspace.core</artifactId>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-Author><![CDATA[Michele Girolami <michele.girolami@isti.cnr.it>, Francesco Furfari <francesco.furfari@isti.cnr.it>]]></Bundle-Author>
						<Bundle-Name>${project.name}</Bundle-Name>
						<Bundle-Description>${project.description}</Bundle-Description>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Provider>ISTI-CNR</Bundle-Provider>
						<Import-Package>
							org.universAAL.middleware.interfaces,
							org.universAAL.middleware.interfaces.aalspace,
							org.universAAL.middleware.modules.aalspace,
							org.universAAL.middleware.modules.listener,
							org.universAAL.middleware.modules.util,
							org.universAAL.middleware.connectors,
							org.universAAL.middleware.connectors.exception,
							org.universAAL.middleware.container,
							org.universAAL.middleware.container.utils,
							org.universAAL.middleware.modules,
							org.universAAL.middleware.modules.exception,
							org.osgi.framework,
							org.osgi.service.cm, org.universAAL.middleware.brokers.control,
							org.universAAL.middleware.container.osgi,
							org.universAAL.middleware.connectors.util,
							org.universAAL.middleware.brokers.message,
							org.universAAL.middleware.brokers.message.aalspace,
							org.json,
							org.universAAL.middleware.brokers
						</Import-Package>
						<Export-Package>org.universAAL.middleware.modules.aalspace.*</Export-Package>
						<Bundle-Activator>org.universAAL.middleware.modules.aalspace.osgi.Activator</Bundle-Activator>
						<Private-Package />
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
