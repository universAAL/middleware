<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.universAAL.middleware</groupId>
    <artifactId>mw.pom</artifactId>
    <version>2.0.4-SNAPSHOT</version>
    <relativePath>../../pom</relativePath>
  </parent>
  <groupId>org.universAAL.middleware</groupId>
  <artifactId>mw.pom.config</artifactId>
  <version>2.0.4-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>universAAL Middleware Suite (Config)</name>
  <description>The set of artefacts realizing the universAAL middleware 2.0 (Configuration)</description>
  <modules>
    <module>../mw.connectors.communication.jgroups.core.config</module>
    <module>../mw.connectors.discovery.slp.core.config</module>
    <module>../mw.managers.aalspace.core.config</module>
    <module>../mw.managers.deploy.core.config</module>
    <module>../mw.modules.aalspace.core.config</module>
  </modules>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.managers.deploy.core.config</artifactId>
        <version>2.0.4-SNAPSHOT</version>
        <type>cfg</type>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.modules.aalspace.core.config</artifactId>
        <version>2.0.4-SNAPSHOT</version>
        <type>cfg</type>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.connectors.communication.jgroups.core.config</artifactId>
        <version>2.0.4-SNAPSHOT</version>
        <type>cfg</type>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.connectors.discovery.slp.core.config</artifactId>
        <version>2.0.4-SNAPSHOT</version>
        <type>cfg</type>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.managers.aalspace.core.config</artifactId>
        <version>2.0.4-SNAPSHOT</version>
        <type>cfg</type>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <version>2.1.2</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-composite</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
