    <module>../mw.bus.service.aapi.core</module>
    <module>../mw.bus.context.core</module>
    <module>../mw.bus.ui.core</module>
  </modules>
  <scm>
    <connection>${svn.base}/middleware.core/${project.artifactId}</connection>
    <developerConnection>${svn.base}/middleware.core/${project.artifactId}</developerConnection>
    <url>${svn.base.url}middleware.core/${project.artifactId}</url>
  </scm>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.acl.interfaces.core</artifactId>
        <version>1.2.0</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.bus.context.core</artifactId>
        <version>1.2.0</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.bus.ui.core</artifactId>
        <version>1.2.0</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.bus.model.core</artifactId>
        <version>1.2.0</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.bus.service.core</artifactId>
        <version>1.2.0</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.bus.service.aapi.core</artifactId>
        <version>1.2.0</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.container.xfaces.core</artifactId>
        <version>1.2.0</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.data.representation.core</artifactId>
        <version>1.2.0</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.data.serialization.core</artifactId>
        <version>1.2.0</version>
      </dependency>
      <dependency>
        <groupId>org.universAAL.middleware</groupId>
        <artifactId>mw.composite</artifactId>
        <version>1.2.0</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <version>2.1.2</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
