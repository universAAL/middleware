<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:aalChannel="http://universaal.org/aalspace-channel/v1.0.0"
  targetNamespace="http://universaal.org/aalspace-channel/v1.0.0" elementFormDefault="qualified" attributeFormDefault="unqualified">
  <xs:complexType name="channelDescriptor">
    <xs:annotation>
      <xs:documentation>This schema describes the meta-information of an
        AALSpace Channel
      </xs:documentation>
    </xs:annotation>
    <xs:sequence>
      <xs:element name="channelName" type="xs:string" />
      <xs:element name="channelURL" type="xs:string" />
      <xs:element name="channelValue" type="xs:string" />
    </xs:sequence>
  </xs:complexType>

</xs:schema>
